<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.akexorcist.deviceinformation.module.search.DeviceSearchActivity">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        app:contentInsetEnd="0dp"
        app:contentInsetStart="0dp"
        android:layout_height="wrap_content"
        android:background="@color/primary">

        <com.mancj.materialsearchbar.MaterialSearchBar
            android:id="@+id/sb_device_keyword"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hint="@string/search_device_keyword_hint"
            app:maxSuggestionsCount="3"
            app:navIconEnabled="false"
            app:speechMode="false" />
    </android.support.v7.widget.Toolbar>

</LinearLayout>

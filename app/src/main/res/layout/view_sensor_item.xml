<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_padding_small"
    android:paddingTop="@dimen/margin_padding_small">

    <android.support.v7.widget.CardView
        android:layout_width="@dimen/content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_margin="@dimen/margin_padding_small"
        app:cardCornerRadius="@dimen/corner_radius">

        <LinearLayout
            android:id="@+id/layout_info_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding">

            <TextView
                android:id="@+id/tv_sensor_title"
                style="@style/TextView.Black"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/margin_padding"
                android:layout_marginLeft="@dimen/margin_padding"
                android:layout_marginRight="@dimen/margin_padding"
                android:layout_marginStart="@dimen/margin_padding"
                android:layout_marginTop="@dimen/margin_padding_small" />

            <TextView
                android:id="@+id/tv_sensor_type"
                style="@style/TextView.LightGray.ExtraSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/margin_padding_small"
                android:layout_marginEnd="@dimen/margin_padding"
                android:layout_marginLeft="@dimen/margin_padding"
                android:layout_marginRight="@dimen/margin_padding"
                android:layout_marginStart="@dimen/margin_padding"
                android:layout_marginTop="@dimen/margin_padding_small" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_padding_small"
    android:paddingLeft="@dimen/margin_padding"
    android:paddingRight="@dimen/margin_padding"
    android:paddingTop="@dimen/margin_padding_extra_large">

    <com.akexorcist.deviceinformation.widget.Divider
        style="@style/Divider.Horizontal.LightGray"
        android:layout_width="match_parent"
        android:layout_height="@dimen/divider"
        android:layout_gravity="center_vertical" />

    <TextView
        android:id="@+id/tv_feature_header"
        style="@style/TextView.Gray"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="@dimen/margin_padding_small"
        android:layout_marginEnd="@dimen/margin_padding"
        android:layout_marginLeft="@dimen/margin_padding"
        android:layout_marginRight="@dimen/margin_padding"
        android:layout_marginStart="@dimen/margin_padding"
        android:layout_marginTop="@dimen/margin_padding_small"
        android:background="@color/extra_extra_light_gray"
        android:paddingLeft="@dimen/margin_padding"
        android:paddingRight="@dimen/margin_padding" />

</FrameLayout>

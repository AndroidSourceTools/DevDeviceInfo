<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_feature_bottom_sheet"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/transparent"
    app:behavior_peekHeight="0dp"
    app:layout_behavior="@string/bottom_sheet_behavior">

    <LinearLayout
        android:id="@+id/layout_feature_bottom_sheet_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="8dp"
            android:background="@drawable/shape_shadow_gradient_top" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="vertical"
            android:paddingLeft="@dimen/margin_padding_large"
            android:paddingRight="@dimen/margin_padding_large">

            <TextView
                android:id="@+id/tv_feature_bottom_sheet_name"
                style="@style/TextView.Accent.Large"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingBottom="@dimen/margin_padding"
                android:paddingTop="@dimen/margin_padding_large" />

            <TextView
                android:id="@+id/tv_feature_bottom_sheet_package_name"
                style="@style/TextView.LightGray.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_feature_bottom_sheet_minimum_sdk"
                style="@style/TextView.LightGray.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_feature_bottom_sheet_description"
                style="@style/TextView.Gray"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/widget_bottom_sheet_info_padding_bottom"
                android:layout_marginTop="@dimen/margin_padding" />
        </LinearLayout>
    </LinearLayout>
</FrameLayout>

<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="@dimen/margin_padding_small"
    android:paddingTop="@dimen/margin_padding_small">

    <android.support.v7.widget.CardView
        style="@style/InfoCardView"
        android:layout_width="@dimen/content_width"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:orientation="vertical"
            android:padding="@dimen/margin_padding_large">

            <TextView
                android:id="@+id/tv_camera_info_title"
                style="@style/TextView.Black.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/tv_camera_info_value"
                style="@style/TextView.Gray.Small"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_padding_small" />

        </LinearLayout>
    </android.support.v7.widget.CardView>
</FrameLayout>

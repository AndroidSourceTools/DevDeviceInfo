    <!-- Button -->
    <style name="Button.Borderless">
        <item name="android:background">@drawable/selector_button_borderless</item>
    </style>

    <style name="Button.Borderless.Link">
        <item name="android:textColor">@color/text_link</item>
    </style>

    <style name="Button.Borderless.Error">
        <item name="android:textColor">@color/text_error</item>
    </style>

    <style name="Button.Borderless.Black">
        <item name="android:textColor">@color/text_black</item>
    </style>

    <style name="Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/text_size</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Button.Accent">
        <item name="backgroundTint">@color/accent</item>
    </style>

    <style name="Button.Primary">
        <item name="backgroundTint">@color/primary</item>
    </style>

    <style name="Button.Warning">
        <item name="backgroundTint">@color/warning</item>
    </style>

    <style name="Button.Error">
        <item name="backgroundTint">@color/error</item>
    </style>

    <!-- Divider -->
    <style name="Divider" />

    <style name="Divider.Horizontal">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">@dimen/divider</item>
    </style>

    <style name="Divider.Vertical">
        <item name="android:layout_width">@dimen/divider</item>
        <item name="android:layout_height">match_parent</item>
    </style>

    <style name="Divider.Horizontal.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider.Vertical.White">
        <item name="android:background">@color/white</item>
    </style>

    <style name="Divider.Horizontal.Gray">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Divider.Vertical.Gray">
        <item name="android:background">@color/gray</item>
    </style>

    <style name="Divider.Horizontal.LightGray">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="Divider.Vertical.LightGray">
        <item name="android:background">@color/light_gray</item>
    </style>

    <style name="Divider.Horizontal.Transparent">
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="Divider.Vertical.Transparent">
        <item name="android:background">@color/transparent</item>
    </style>

    <!-- Tab Layout -->
    <style name="DefaultTabLayout" parent="Widget.Design.TabLayout">
        <item name="android:background">?attr/colorPrimary</item>
        <item name="tabMode">scrollable</item>
        <item name="tabTextAppearance">@style/TabLayoutTextAppearance</item>
        <item name="theme">@style/ThemeOverlay.AppCompat.Dark.ActionBar</item>
    </style>

    <style name="TabLayoutTextAppearance" parent="TextAppearance.Design.Tab">
        <item name="android:textSize">@dimen/text_size_small</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- AV Loading Indicator View -->
    <style name="LoadingIndicatorView">
        <item name="indicatorColor">@color/accent</item>
        <item name="indicatorName">BallPulseIndicator</item>
        <item name="android:layout_gravity">center</item>
    </style>

    <!-- Card View -->
    <style name="InfoCardView">
        <item name="android:layout_margin">@dimen/margin_padding_small</item>
        <item name="cardBackgroundColor">@color/white</item>
        <item name="cardCornerRadius">@dimen/corner_radius</item>
    </style>

</resources>
